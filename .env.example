# Universal Encryption Platform Configuration Template
# Copy this file to .env and update the values for your environment

# ======================
# Flask Configuration
# ======================
FLASK_ENV=development
# IMPORTANT: Change these secrets in production!
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-change-in-production

# ======================
# CORS Configuration
# ======================
# Add your frontend URLs (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# ======================
# File Upload Configuration
# ======================
UPLOAD_FOLDER=./uploads
TEMP_FOLDER=./temp
# 16MB file upload limit (in bytes)
MAX_CONTENT_LENGTH=16777216

# ======================
# Logging Configuration
# ======================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ======================
# Cryptography Configuration
# ======================
# PBKDF2 iterations (higher = more secure but slower)
PBKDF2_ITERATIONS=100000
# Default key derivation algorithm: PBKDF2, Argon2, or Scrypt
DEFAULT_KDF_ALGORITHM=PBKDF2

# ======================
# API Configuration
# ======================
API_VERSION=v1
DEFAULT_PAGE_SIZE=50

# ======================
# Security Configuration
# ======================
# File retention in hours (24 hours = 1 day)
FILE_RETENTION_HOURS=24
# Cleanup interval in minutes
CLEANUP_INTERVAL_MINUTES=60

# ======================
# Performance Configuration
# ======================
# Maximum worker threads for concurrent operations
MAX_WORKER_THREADS=4
# Thread timeout in seconds
THREAD_TIMEOUT=30

# ======================
# Optional: Database Configuration
# ======================
# DATABASE_URL=sqlite:///uep.db
# DATABASE_URL=postgresql://user:password@localhost/uep
# DATABASE_URL=mysql://user:password@localhost/uep

# ======================
# Optional: Redis Configuration (for caching/sessions)
# ======================
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your-redis-password

# ======================
# Optional: Email Configuration (for notifications)
# ======================
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-email-password

# ======================
# Production Only Settings
# ======================
# Uncomment and set these for production deployment

# SSL/TLS Configuration
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# FORCE_HTTPS=True

# Security Headers
# SECURE_HEADERS=True
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True

# Rate Limiting
# RATE_LIMIT_ENABLED=True
# RATE_LIMIT_PER_HOUR=100
# RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# Monitoring & Analytics
# SENTRY_DSN=https://your-sentry-dsn
# ANALYTICS_ENABLED=False
# METRICS_PORT=9090